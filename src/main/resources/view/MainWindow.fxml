<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lubot.MainWindow">
    <children>
        <TextArea fx:id="dialogArea"
                  layoutX="10" layoutY="10"
                  prefWidth="480" prefHeight="320"
                  editable="false" wrapText="true"/>

        <TextField fx:id="userInput"
                   layoutX="10" layoutY="340"
                   prefWidth="380" prefHeight="30"
                   onAction="#handleUserInput"/>

        <Button text="Send"
                layoutX="400" layoutY="340"
                prefWidth="90" prefHeight="30"
                onAction="#handleUserInput"/>
    </children>
</AnchorPane>
